<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.student.StudentDashboardController"
      style="-fx-background-color: #f5f5f5;" prefWidth="400" prefHeight="700">

    <!-- HEADER (Blue) -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #42a5f5; -fx-padding: 30 20 20 20; -fx-background-radius: 0 0 20 20;">
        <StackPane>
            <Circle radius="35" fill="WHITE"/>
            <Label text="ðŸ‘¤" style="-fx-font-size: 40px;"/>
        </StackPane>
        <Label fx:id="userNameLabel" text="STUDENT NAME" textFill="WHITE">
            <font><Font name="System Bold" size="18"/></font>
        </Label>
        <Label fx:id="userErpLabel" text="ERP ID" textFill="WHITE" style="-fx-opacity: 0.9;"/>

        <!-- BUTTONS -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="View Profile" onAction="#handleViewProfile"
                    style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 20; -fx-text-fill: white; -fx-padding: 5 20; -fx-cursor: hand;"/>

            <Button text="ðŸ”” Notices" onAction="#handleShowNotices"
                    style="-fx-background-color: white; -fx-text-fill: #42a5f5; -fx-background-radius: 20; -fx-padding: 5 20; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </VBox>

    <!-- SEARCH -->
    <VBox style="-fx-padding: 20;">
        <TextField fx:id="searchField" promptText="ðŸ” Search Frequently Used"
                   style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);"/>
    </VBox>

    <!-- GRID -->
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 0 20;" hbarPolicy="NEVER">
        <VBox spacing="15">
            <Label text="Frequently Used" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
            <FlowPane fx:id="menuGrid" hgap="15" vgap="15" alignment="TOP_CENTER" prefWrapLength="350"/>
        </VBox>
    </ScrollPane>
</VBox>
