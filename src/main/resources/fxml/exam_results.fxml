<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.teacher.ExamResultsController"
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="800" prefHeight="600">

    <Label text="ðŸ“Š Exam Results" textFill="#2e7d32">
        <font><Font name="System Bold" size="22"/></font>
    </Label>
    <Separator style="-fx-padding: 10 0 20 0;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <ComboBox fx:id="examSelector" promptText="Select Exam" prefWidth="300"/>
        <Button text="Load Results" onAction="#handleLoad"
                style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <TableView fx:id="resultTable" VBox.vgrow="ALWAYS" style="-fx-padding: 10 0 0 0;">
        <columns>
            <TableColumn fx:id="colN" text="Student Name" prefWidth="300"/>
            <TableColumn fx:id="colS" text="Score" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
