<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.author.ManageSubjectsController"
      style="-fx-padding: 30; -fx-background-color: white;" prefWidth="600" prefHeight="500">

    <Label text="ðŸ“š Subject Management" textFill="#c62828">
        <font><Font name="System Bold" size="22"/></font>
    </Label>
    <Separator style="-fx-padding: 10 0 20 0;"/>

    <!-- Add Form -->
    <GridPane hgap="15" vgap="15">
        <TextField fx:id="nameField" promptText="Subject Name (e.g. Java)" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="200"/>
        <TextField fx:id="codeField" promptText="Sub Code (e.g. CS101)" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="150"/>
        <TextField fx:id="deptField" promptText="Dept (e.g. CSE)" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="100"/>
        <Button text="Add Subject" onAction="#handleAdd" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
    </GridPane>

    <Label fx:id="statusLabel" textFill="green" style="-fx-padding: 10 0;"/>

    <!-- Table -->
    <TableView fx:id="subjectTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Subject Name" prefWidth="250"/>
            <TableColumn fx:id="colCode" text="Code" prefWidth="150"/>
            <TableColumn fx:id="colDept" text="Department" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
