<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.teacher.AnswerSheetController"
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="800" prefHeight="600">

    <Label text="ðŸ“„ Answer Sheet Review" textFill="#00897b">
        <font><Font name="System Bold" size="22"/></font>
    </Label>
    <Separator style="-fx-padding: 10 0 20 0;"/>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="erpField" promptText="Enter Student Roll No" prefWidth="200"/>
        <ComboBox fx:id="examSelector" promptText="Select Exam" prefWidth="250"/>
        <Button text="View Sheet" onAction="#handleViewSheet"
                style="-fx-background-color: #00897b; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <TableView fx:id="responseTable" VBox.vgrow="ALWAYS" style="-fx-padding: 10 0 0 0;">
        <columns>
            <TableColumn fx:id="colQ" text="Question" prefWidth="400"/>
            <TableColumn fx:id="colSel" text="Student Answer" prefWidth="150"/>
            <TableColumn fx:id="colCor" text="Correct Key" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
