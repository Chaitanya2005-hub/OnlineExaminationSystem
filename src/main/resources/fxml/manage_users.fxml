<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.author.ManageUsersController"
      style="-fx-padding: 30; -fx-background-color: white;" prefWidth="500">

    <Label text="ðŸ‘¤ Add New User" textFill="#c62828">
        <font><Font name="System Bold" size="22"/></font>
    </Label>
    <Separator style="-fx-padding: 10 0 20 0;"/>

    <GridPane vgap="15" hgap="15">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="John Doe" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleCombo" prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="ERP ID / Roll No:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="erpField" promptText="2025001" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Department:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="deptField" promptText="CSE" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Year (Students only):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="yearField" promptText="1, 2, 3, 4" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Username:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Create User" onAction="#handleAddUser" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; margin-top: 20;"/>
    <Label fx:id="statusLabel" style="-fx-padding: 10 0 0 0;" textFill="green"/>
</VBox>
