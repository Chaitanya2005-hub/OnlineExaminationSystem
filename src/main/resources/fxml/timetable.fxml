<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.stark.exam.ui.student.TimetableController"
      style="-fx-padding: 30; -fx-background-color: #f4f6f9;" prefWidth="700" prefHeight="500">

    <Label text="ðŸ“… Exam Timetable" textFill="#1a237e">
        <font><Font name="System Bold" size="24"/></font>
    </Label>
    <Separator style="-fx-padding: 15 0 25 0;"/>

    <TableView fx:id="timetableTable" VBox.vgrow="ALWAYS" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
        <columns>
            <TableColumn fx:id="colSubject" text="Subject" prefWidth="300"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
            <TableColumn fx:id="colTime" text="Time" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Close Window" style="-fx-background-color: #1a237e; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
